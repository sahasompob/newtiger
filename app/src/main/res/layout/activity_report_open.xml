<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp" >

    <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="visible">

        <TextView
                android:id="@+id/title_text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="30dp"
                android:text="รายงานการเปิดตู้"
                android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/date_layout"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="400dp"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/previousButton_op"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_yellow"
                android:text="@string/previous"
                android:textSize="22sp"/>

        <TextView
                android:id="@+id/currentTime_deposit_op"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="25dp"
                android:textStyle="bold" />

        <Button
                android:id="@+id/nextButton_op"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_yellow"
                android:text="@string/next"
                android:textSize="22sp"/>

    </LinearLayout>


    <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">


        <Button
                android:id="@+id/previousButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_yellow"
                android:text="@string/previous"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/currentTime"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

        <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_yellow"
                android:text="@string/next"
                android:textSize="16sp"/>
    </LinearLayout>

    <!--
    <EditText
        android:id="@+id/searchBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter invoice ID here." >
    </EditText>
    -->

    <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="gone">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="DE = ฝาก ,"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="70dp"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="OP = เปิดตู้ ,"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="150dp"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="OPF = ยกเลิกการเปิดตู้"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="240dp"/>
    </RelativeLayout>

    <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        <TableRow
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.1"
                android:background="#FFFFFF"
                android:paddingBottom="1dip"
                android:paddingLeft="1dip"
                android:paddingTop="1dip" >

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="#33B5E5"
                    android:gravity="center"
                    android:paddingRight="3dp"
                    android:text="เปิดโดย"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
        </TableRow>

        <TableRow
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="0.15"
                android:background="#FFFFFF"
                android:paddingBottom="1dip"
                android:paddingLeft="1dip"
                android:paddingTop="1dip" >

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:background="#33B5E5"
                    android:gravity="center"
                    android:paddingRight="3dp"
                    android:text="@string/date"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
        </TableRow>

        <TableRow
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.07"
                android:background="#FFFFFF"
                android:paddingBottom="1dip"
                android:paddingLeft="1dip"
                android:paddingRight="1dip"
                android:paddingTop="1dip" >

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:background="#33B5E5"
                    android:gravity="center"
                    android:paddingRight="3dp"
                    android:text="ยอดเงิน"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
        </TableRow>











    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4.96"
            android:orientation="vertical" >

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerUserList"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal" >

        <Button
                android:id="@+id/back_btn"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:textSize="20dp"
                android:background="@drawable/btn_red"
                android:text="กลับ"/>


    </LinearLayout>



</LinearLayout>