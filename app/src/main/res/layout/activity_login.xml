<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorBottomBar">


        <RelativeLayout

                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">


            <ImageView android:layout_width="190dp"
                       android:background="@drawable/logo_tiger"
                       android:layout_height="190dp"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <Button
                    android:id="@+id/login_status_offline"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/offline_btn"
            />

            <Button
                    android:id="@+id/login_status_online"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/online_btn"
            />


        </RelativeLayout>


        <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/imageView1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp">

            <ImageView
                    android:id="@+id/imgView_userIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/img_user"
                    android:tint="@color/white" />

            <EditText
                    android:id="@+id/edt_username_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgView_userIcon"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toRightOf="@+id/imgView_userIcon"
                    android:background="@color/white"
                    android:hint="Username"
                    android:inputType="numberPassword"
                    android:paddingLeft="20dp"
                    android:textSize="30sp" />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/imageView1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp">

            <ImageView
                    android:id="@+id/imgView_userIcon2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:src="@drawable/img_authentication"
                    android:tint="@color/white" />

            <EditText

                    android:id="@+id/edt_password_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgView_userIcon2"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toRightOf="@+id/imgView_userIcon2"
                    android:background="@color/white"
                    android:inputType="numberPassword"
                    android:hint="Password"
                    android:paddingLeft="20dp"
                    android:textSize="30sp" />

        </RelativeLayout>

        <Button
                android:layout_marginTop="30dp"
                android:id="@+id/btn_submit_login"
                android:background="@color/colorPrimary"
                android:text="@string/ok"
                android:textSize="25dp"
                android:layout_width="200dp"
                android:layout_height="70dp" />

    </LinearLayout>




</LinearLayout>